    <div class="d-flex aling-items-center border-black back-username">
      <img src="assets/images/squared_foto.jpg" class="img-fluid mt-4 ms-4" width="100" height="50" />
      <span class="mt-4 ms-3" style="color: #62778A;"> Mrigorir <span>
    </div>
    <div class="d-flex align-items-center justify-content-center border-dark back-username py-2 mb-4">
      <div class="flex-column d-flex text-center border-right-divisor pe-4">
        <span class="text-white"> 
        2 
        </span> 
        <span style="color: #62778A;"> 
        Following
        </span>
      </div>
        <div class="flex-column d-flex text-center ps-4">
        <span class="text-white"> 
        1 
        </span> 
        <span  style="color: #62778A;"> 
        Followers
        </span>
      </div>
    </div>
    <ul class="nav nav-pills flex-column mb-auto ps-3">
      <li class="nav-item text-uppercase mb-2">
        <%= link_to home_path, class:'nav-link', style: 'color: #62778A' do %> 
          <i class="fas fa-home me-2"></i>
          Home
        <% end %>
      </li>
      <li class="nav-item text-uppercase">
        <a href="#" class="nav-link" style="color: #62778A;">
          <i class="fas fa-user me-2"></i>
          Profile
        </a>
      </li>
      </li>
    </ul>
  </div>
</div>
<div class="col-md-10 p-0">
  <nav class="navbar navbar-expand-lg navbar-light bg-twitter" style="padding: 12px;">
    <div class="container-fluid">
      <%= link_to home_path, class: 'navbar-brand' do %>
        <i class="fa fa-twitter text-white fs-1"> </i>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item me-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit profile">
            <%= link_to edit_user_path(current_user.id), class:'nav-link', style: 'color: #337ab7' do %>
              <i class="fas fa-pen fs-3"></i>
            <% end %> 
          </li>
          <div class="divisor"> </div>
          <li class="nav-item me-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Messages">
            <%= link_to home_path, class:'nav-link', style: 'color: #337ab7' do %>
              <i class="fas fa-envelope fs-3"></i>
            <% end %> 
          </li>
          <div class="divisor"> </div>
          <li class="nav-item me-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Filter your preferences">
            <%= link_to home_path, class:'nav-link', style: 'color: #337ab7' do %>
              <i class="fas fa-search fs-3"></i>
            <% end %> 
          </li>
          <div class="divisor"> </div>
          <li class="nav-item me-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Settings">
            <%= link_to home_path, class:'nav-link', style: 'color: #337ab7' do %>
              <i class="fas fa-cog fs-3"></i>
            <% end %> 
          </li>
          <div class="divisor"> </div>
          <li class="nav-item me-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Logout">
            <%= link_to logout_path, class:'nav-link', style: 'color: #337ab7', method: :delete do %>
              <i class="fas fa-sign-out-alt fs-3"></i>
            <% end %> 
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="row">
    <div class="col-md-12">
      <%= yield %>
    </div>
  </div>
</div>
