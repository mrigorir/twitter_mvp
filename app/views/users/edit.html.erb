<section class="container-fluid edit-profile mt-3">
  <div class="">
   <div class="row">
      <div class="col-md-6 p-0">
        <div class="twitter-image" style="height: 750px;">
        </div>
      </div>
      <div class="col-md-6 signin-back d-flex align-items-center justify-content-center">
        <div>
          <div class="text-center my-5">
            <p class="c-twitter">
              <i class="fas fa-users fs-1"> </i>
            </p>
            <p class="c-nav-items fs-4">
            Update your info
            </p>
          </div>
          <div>
            <%= form_for @user do |user| %>
              <% if flash[:message_edit] %>
                <div class="alert alert-danger text-danger m-0 text-center px-5">
                  <% flash[:message_edit].each do |message| %>
                    <%= message %>
                  <% end %>
                </div>
              <% end %>
              <div>
                <div class="input-group my-5">
                  <span class="input-group-text"><i class="fas fa-pen text-white"> </i></span>
                  <%= user.text_field :fullname, placeholder:"Fullname", class:"form-control bg-white", id:"fullname" %>
                </div>
                <div class="input-group my-3">
                  <span class="input-group-text"><i class="fas fa-user text-white"> </i></span>
                  <%= user.text_field :username, placeholder:"Username", class:"form-control bg-white", id:"username" %>
                </div>
                <%= user.label 'Photo', class: 'c-letter-sidebar' %>
                <div class="input-group my-3">
                  <span class="input-group-text"><i class="fas fa-image text-white"> </i></span>
                  <%= user.file_field :avatar, class:"form-control bg-white", id:"photo" %>
                </div>
                <div class="form-group text-center mt-5">
                  <span class="fs-6"> 
                    Already have an account? <%= link_to "Login", login_path, class:' ms-1 text-decoration-none' %>
                  </span>
                </div>
                <div class="d-grid gap-2 mt-2 mb-5">
                  <%= user.submit "Update profile", class:'boton text-white fs-5', id:"edit" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>